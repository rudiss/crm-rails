<h1>Posts</h1>

<hr>
<table class="table">
  <thead class="thead-inverse">
    <tr>
      <th>#</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Username</th>
    </tr>
  </thead>
  <tbody>
    <%= @posts.each do |post| %>

    <tr>
      <td><%= post.id %></td>
      <td><%= post.user.last_name %></td>
      <td><%= post.date %></td>
      <td><%= post.rationale %></td>
    </tr>
    <% end %>

  </tbody>
</table>
