
<tr>
  <td><%= post.id %></td>
  <td><%= post.user.full_name %></td>
  <td><%= post.date %></td>
  <%# for do brake the table %>
  <td><%= truncate(post.rationale) %></td> 
  <td><%= status_label post.status%></td>
  <!-- get id of edit to rspec test -->
  <td> <%= link_to 'Edit', edit_post_path(post) , id: "edit_#{post.id}" if policy(post).update? %></td>
  <td> <%= link_to 'Delete', post_path(post), method: :delete, 
  id: "delete_post_#{post.id}_from_index", data: {confirm: 'Are you sure?'} %></td>
</tr>
