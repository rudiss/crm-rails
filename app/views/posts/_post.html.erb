
<tr>
  <td><%= post.id %></td>
  <td><%= post.overtime_request %></td>
  <td><%= post.user.full_name %></td>
  <td><%= post.date %></td>
  <%# for do brake the table %>
  <td><%=link_to truncate(post.rationale), post %></td> 
  <td><%= status_label post.status%></td>
  <!-- get id of edit to rspec test -->
  <td> <%= link_to '', edit_post_path(post) , id: "edit_#{post.id}", class: 'glyphicon glyphicon-pencil index-icons edit' if policy(post).update? %></td>
  <td> <%= link_to '', post_path(post), class: 'glyphicon glyphicon-trash red index-icons delete', method: :delete, 
  id: "delete_post_#{post.id}_from_index", data: {confirm: 'Are you sure?'} %></td>
</tr>
